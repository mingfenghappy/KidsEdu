<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@android:id/tabhost" >
	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:orientation="vertical">
		<RelativeLayout 
		    android:padding="6.0dip" 
		    android:layout_width="fill_parent" 
		    android:layout_height="@dimen/titlebar_height" >
    		<RelativeLayout 
    		    android:gravity="center_vertical" 
    		    android:id="@+id/titlebar_search_box" 
    		    android:background="@drawable/titlebar_searchbox_bg" 
    		    android:layout_width="fill_parent" 
    		    android:layout_height="fill_parent">
	        	<ImageView 
	        	    android:id="@+id/titlebar_searchbox_search" 
	        	    android:layout_width="wrap_content" 
	        	    android:layout_height="wrap_content" 
	        	    android:layout_marginLeft="9.0dip"  
	        	    android:src="@drawable/titlebar_searchbox_icon" 
	        	    android:scaleType="center" 
	        	    android:layout_alignParentLeft="true" 
	        	    android:layout_centerVertical="true" />
	        	<ImageView 
		            android:id="@+id/tab_account"
		            android:padding="5dip"
		            android:layout_marginTop="5dip"
		            android:src="@drawable/dimensional_code_icon"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
	        	    android:scaleType="center" 
	        	    android:layout_alignParentRight="true" 
	        	    android:layout_centerVertical="true"/>
	        	<EditText 
	            	android:id="@+id/tab_search" 
	        	    android:textSize="15.0dip" 
	        	    android:textColor="#ffafafaf" 
	        	    android:layout_width="fill_parent" 
	        	    android:layout_height="wrap_content" 
	        	    android:layout_marginLeft="6.0dip" 
	        	    android:hint="搜索"
	        	    android:singleLine="true" 
	        	    android:layout_toLeftOf="@id/tab_account" 
	        	    android:layout_toRightOf="@id/titlebar_searchbox_search" 
	        	    android:layout_centerVertical="true" />
	    	</RelativeLayout>
		</RelativeLayout>
	    <FrameLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:layout_weight="1"
	        android:id="@android:id/tabcontent">
	        
	    </FrameLayout>
	    <TabWidget 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="0"
	        android:visibility="gone"
	        android:id="@android:id/tabs">
	        
	    </TabWidget>
	    <RelativeLayout 
		    android:background="@drawable/main_tab_indicator_background" 
		    android:layout_width="fill_parent" 
		    android:layout_height="wrap_content" >
    		<LinearLayout 
    		    android:gravity="top|center" 
    		    android:orientation="horizontal" 
    		    android:layout_width="fill_parent" 
    		    android:layout_height="wrap_content">
				<LinearLayout 
				    android:id="@+id/video_layout"
    		        android:gravity="center" 
    		        android:layout_gravity="center_vertical" 
    		        android:orientation="horizontal" 
    		        android:background="@drawable/main_tab_indicator_background" 
    		        android:layout_width="wrap_content" 
    		        android:layout_height="fill_parent" 
    		        android:layout_weight="1.0">
    				<TextView 
    				    android:textSize="16.0dip" 
    				    android:textColor="@android:color/white" 
    				    android:gravity="center" 
    				    android:text="看看"
    				    android:duplicateParentState="true" 
    				    android:layout_width="wrap_content" 
    				    android:layout_height="fill_parent" 
    				    android:singleLine="true" />
				</LinearLayout>
				<ImageView 
				    android:background="@drawable/main_tab_divider"
   				    android:layout_width="wrap_content" 
   				    android:layout_height="fill_parent" />
    		    <LinearLayout 
    		        android:id="@+id/music_layout"
    		        android:gravity="center" 
    		        android:layout_gravity="center_vertical" 
    		        android:orientation="horizontal" 
    		        android:background="@drawable/main_tab_indicator_background" 
    		        android:layout_width="wrap_content" 
    		        android:layout_height="fill_parent" 
    		        android:layout_weight="1.0">
    				<TextView 
    				    android:textSize="16.0dip" 
    				    android:textColor="@android:color/white" 
    				    android:gravity="center" 
    				    android:text="听听"
    				    android:duplicateParentState="true" 
    				    android:layout_width="wrap_content" 
    				    android:layout_height="fill_parent" 
    				    android:singleLine="true" />
				</LinearLayout>				
				<ImageView 
				    android:background="@drawable/main_tab_divider"
   				    android:layout_width="wrap_content" 
   				    android:layout_height="fill_parent" />
				<LinearLayout 
				    android:id="@+id/read_layout"
    		        android:gravity="center" 
    		        android:layout_gravity="center_vertical" 
    		        android:orientation="horizontal" 
    		        android:background="@drawable/main_tab_indicator_background" 
    		        android:layout_width="wrap_content" 
    		        android:layout_height="fill_parent" 
    		        android:layout_weight="1.0">
    				<TextView 
    				    android:textSize="16.0dip" 
    				    android:textColor="@android:color/white" 
    				    android:gravity="center" 
    				    android:text="读读"
    				    android:duplicateParentState="true" 
    				    android:layout_width="wrap_content" 
    				    android:layout_height="fill_parent" 
    				    android:singleLine="true" />
				</LinearLayout>
				<ImageView 
				    android:background="@drawable/main_tab_divider"
   				    android:layout_width="wrap_content" 
   				    android:layout_height="fill_parent" />
				<LinearLayout 
				    android:id="@+id/study_layout"
    		        android:gravity="center" 
    		        android:layout_gravity="center_vertical" 
    		        android:orientation="horizontal" 
    		        android:background="@drawable/main_tab_indicator_background" 
    		        android:layout_width="wrap_content" 
    		        android:layout_height="fill_parent" 
    		        android:layout_weight="1.0">
    				<TextView 
    				    android:textSize="16.0dip" 
    				    android:textColor="@android:color/white" 
    				    android:gravity="center" 
    				    android:text="学学"
    				    android:duplicateParentState="true" 
    				    android:layout_width="wrap_content" 
    				    android:layout_height="fill_parent" 
    				    android:singleLine="true" />
				</LinearLayout><ImageView 
				    android:background="@drawable/main_tab_divider"
   				    android:layout_width="wrap_content" 
   				    android:layout_height="fill_parent" />
				<LinearLayout 
				    android:id="@+id/game_layout"
    		        android:gravity="center" 
    		        android:layout_gravity="center_vertical" 
    		        android:orientation="horizontal" 
    		        android:background="@drawable/main_tab_indicator_background" 
    		        android:layout_width="wrap_content" 
    		        android:layout_height="fill_parent" 
    		        android:layout_weight="1.0">
    				<TextView 
    				    android:textSize="16.0dip" 
    				    android:textColor="@android:color/white" 
    				    android:gravity="center" 
    				    android:text="玩玩"
    				    android:id="@+id/tab_indicator_bg_item_name" 
    				    android:duplicateParentState="true" 
    				    android:layout_width="wrap_content" 
    				    android:layout_height="fill_parent" 
    				    android:singleLine="true" />
				</LinearLayout>
	    	</LinearLayout>
		</RelativeLayout>  
	</LinearLayout>
</TabHost>